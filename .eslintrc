{
  "env": {
    "node": true,
    "commonjs": true,
    "es6": true
  },
  "extends": [
    "airbnb-base",
    "prettier"
  ],
  "plugins": ["prettier"],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true,
			"jsx": true
    }
  },
  "settings": {
    "import/resolver": {
      "node": {
        "paths": ["node_modules"]
      }
    }
  },
  "globals": {
    "_": true,
    "Promise": true,
    "log": true,
    "cfg": true
  },
  "rules": {
    "spaced-comment": 1,
    "prefer-arrow-callback": 1,
    "func-names": 1,
    "no-else-return": "off",
    "no-plusplus": 0,
    "no-console": 0,
    "no-underscore-dangle": 0,
    "prettier/prettier": [
			"warn",
			{
				"singleQuote": true,
				"trailingComma": "es5"
			}
		],
    "no-unused-vars": 1,
    "camelcase": 1,
    "no-param-reassign": ["error", { "props": false }]
  }
}
