{
  "name": "hotel-manager",
  "version": "1.0.0",
  "repository": "https://github.com/sethiyark/hotel-manager.git",
  "author": "Raunak Sethiya <sethiyark@gmail.com>",
  "contributors": [
    "Krushna Sharma <krushnasharma24@gmail.com>"
  ],
  "private": true,
  "scripts": {
    "start": "NODE_ENV=development nodemon src/app --exec babel-node",
    "start:stage": "NODE_ENV=staging babel-node src/app",
    "start:prod": "NODE_ENV=production babel-node src/app",
    "build": "babel-changed",
    "build:app": "webpack",
    "start:app": "webpack-dev-server --open"
  },
  "dependencies": {
    "apollo-server-koa": "^2.12.0",
    "bluebird": "^3.7.2",
    "chalk": "^4.0.0",
    "config": "^3.3.1",
    "graphql": "^15.0.0",
    "graphql-tools": "^5.0.0",
    "koa": "^2.9.0",
    "koa-bodyparser": "^4.3.0",
    "koa-router": "^8.0.0-alpha.1",
    "lodash": "^4.17.15",
    "mongoose": "^5.9.10",
    "react": "^16.13.1",
    "react-dom": "^16.13.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.9.0",
    "@babel/node": "^7.8.7",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/plugin-proposal-object-rest-spread": "^7.9.5",
    "@babel/plugin-transform-async-to-generator": "^7.8.3",
    "@babel/preset-env": "^7.9.5",
    "@babel/preset-react": "^7.9.4",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.1.0",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.26.2",
    "css-loader": "^3.5.3",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-config-react-app": "^5.2.1",
    "eslint-plugin-flowtype": "^4.7.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^3.0.0",
    "html-webpack-plugin": "^4.2.0",
    "nodemon": "^2.0.3",
    "prettier": "^2.0.5",
    "sass": "^1.26.5",
    "sass-loader": "^8.0.2",
    "style-loader": "^1.2.0",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "^3.10.3"
  },
  "babel": {
    "plugins": [
      "@babel/plugin-transform-async-to-generator",
      "transform-es2015-modules-commonjs",
      "@babel/plugin-proposal-class-properties",
      "@babel/plugin-proposal-object-rest-spread"
    ],
    "presets": [
      "@babel/preset-env",
      "@babel/preset-react"
    ],
    "sourceMaps": true
  },
  "nodemonConfig": {
    "ignore": [
      "res/*"
    ],
    "watch": [
      "package.json",
      "src"
    ],
    "env": {
      "NODE_ENV": "development"
    },
    "ext": "js,json,graphql"
  }
}
